{
    "name": "Yelp Scraper + Messager",
    "description": "Scrapes the businesses of a certain category on yelp and messages them",
    "version": "1.0",
    "manifest_version": 2,

    "icons": {
        "128": "images/icon.png"
    },

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },

    "permissions": ["tabs", "storage", "<all_urls>"]
}
